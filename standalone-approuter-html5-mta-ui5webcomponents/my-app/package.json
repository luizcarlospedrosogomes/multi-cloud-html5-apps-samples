{
  "name": "my-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@ui5/webcomponents": "~1.8.0",
    "@ui5/webcomponents-fiori": "~1.8.0",
    "@ui5/webcomponents-icons": "~1.8.0",
    "@ui5/webcomponents-react": "^1.2.0",
    "axios": "^0.27.2",
    "formik": "^2.2.9",
    "i18next": "^21.10.0",
    "i18next-browser-languagedetector": "^6.1.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet": "^6.1.0",
    "react-i18next": "^11.18.6",
    "react-query": "^3.39.2",
    "react-router-dom": "^6.4.2",
    "react-scripts": "5.0.1",
    "yup": "^0.32.11"
  },
  "scripts": {
    "start": "react-scripts start",
    "build-react": "react-scripts build",
    "build": "npm run clean && npm run build-react && npm run zip",
    "test": "react-scripts test --silent",
    "eject": "react-scripts eject",
    "start:mock-server": "nodemon --watch server --exec npx json-server --p 3001 server/mockserver.js --routes server/routes.json",
    "test:ci": "npm run test -- --watchAll=false",
    "test:coverage": "npm run test -- --watchAll=false --coverage",
    "lint": "eslint --quiet .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --config .prettierrc --check \"src/**/*.js\"",
    "prettier:fix": "prettier --config .prettierrc --write \"src/**/*.js\"",
    "prepare": "husky install || exit 0",
    "clean": "npx rimraf myapp.zip build",
    "zip": "cd build/ && npx bestzip ../myapp.zip *"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all",
      "not IE 11",
      "not Edge <= 18"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^16.3.0",
    "@commitlint/config-conventional": "^16.2.4",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^27.5.2",
    "husky": "^8.0.1",
    "json-server": "^0.17.0",
    "lint-staged": "^12.5.0",
    "msw": "^0.39.2",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "resize-observer-polyfill": "^1.5.1"
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!(@ui5|lit-html)).*\\.js$"
    ]
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "eslint --quiet"
    ]
  }
}
